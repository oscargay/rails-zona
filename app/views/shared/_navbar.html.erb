<div class="navbar" id="black-color">
  <%= link_to root_path, class: "header-logo" do %>
    <h3>Zona<span><i class="fas fa-golf-ball"></i></span>com</h3>
    <p>sport equipment</p>
  <% end %>
  <div class="navbar-links">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group search-window">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search" id="search-glass"></i>
        </button>
      </div>
    <% end %>
  </div>


  <div class="navbar-login dropdown">

    <%= link_to "Equipment", root_path %>
    <%= link_to "Contact", root_path(anchor: 'footer') %>
    <button>
      <div class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-running"></i>
      </div>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

        <% if user_signed_in? %>
          <%= link_to "Your bookings", bookings_path %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% else %>
          <%= link_to "Create account", new_user_registration_path %>
          <%= link_to "Login", user_session_path %>
        <% end %>
      </div>
    </button>

  </div>
</div>
