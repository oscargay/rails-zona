<div class="navbar" id="black-color">
  <%= link_to root_path, class: "header-logo" do %>
    <h3>Zona<span><i class="fas fa-golf-ball"></i></span>com</h3>
    <p>sport equipment</p>
  <% end %>



  <div class="navbar-login dropdown">

    <%= link_to "Equipment", equipment_index_path %>
    <%= link_to "Contact", equipment_index_path(anchor: 'footer') %>
    <button id="dropdown-button">
      <div class="dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-running"></i>
      </div>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

        <% if user_signed_in? %>
          <%= link_to "Your bookings", bookings_path %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to "Add new equipment", new_equipment_path %>
        <% else %>
          <%= link_to "Create account", new_user_registration_path %>
          <%= link_to "Login", user_session_path %>
        <% end %>
      </div>
    </button>

  </div>
</div>
