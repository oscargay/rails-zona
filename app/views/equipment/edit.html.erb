<div class="container d-flex justify-content-center">
  <div class="row d-flex justify-content-center p-5 shadow-sm bg-white form-card">
    <div class="col-8 new-form">
      <h1 class="text-center mb-4">Edit a piece of equipment</h1>
      <hr align="left" width="15%" class="orange-title-bar mb-3">
        <%= simple_form_for(@equipment) do |f| %>
          <%= simple_form_for @equipment do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :price %>
            <%= f.input :category %>
            <%= f.input :location %>
            <div class="submit-button text-center new-form-submit-button">
              <%= f.button :submit, "Add now!" %>
            </div>
          <% end %>

        <% end %>
    </div>
  </div>
</div>
